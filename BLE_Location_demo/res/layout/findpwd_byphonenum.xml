<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e8f0f0">

    <include layout="@layout/title_bar" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <LinearLayout
            android:id="@+id/linearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp" 
                android:background="@drawable/prefresh_list_cutline"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:orientation="vertical"
                android:background="@drawable/input"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="@string/name" 
                        android:textSize="19sp" 
                        android:textColor="#000000"/>

                    <EditText 
                        android:id="@+id/name_edit" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="20dp" 
                        android:hint="@string/name_hint"
                        android:background="@null" 
                        android:textSize="17sp"/>
                </LinearLayout>

                <View
	                android:layout_width="fill_parent"
	                android:layout_height="1dp" 
	                android:background="@drawable/prefresh_list_cutline"/>

                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <TextView 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="@string/phone" 
                        android:textSize="19sp" 
                        android:textColor="#000000"/>

                     <EditText 
                        android:id="@+id/phoneNo_edit" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="20dp" 
                        android:hint="@string/phone_hint"
                        android:background="@null" 
                        android:textSize="17sp"/>
                </LinearLayout>

                <View 
                    android:layout_height="1dp" 
                    android:layout_width="fill_parent" 
                    android:background="@drawable/prefresh_list_cutline"/>
                <LinearLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="@string/checkcode" 
                        android:textSize="19sp" 
                        android:textColor="#000000"/>

                    <EditText android:id="@+id/checkCode_edit" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="20dp" 
                        android:hint="@string/checkcode_hint"
                        android:background="@null" 
                        android:textSize="17sp"
                        android:singleLine="true"
						android:inputType="textPassword"/>
                    <Button
				        android:id="@+id/btn_getCode"
				        android:layout_marginLeft="35dp"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:background="@drawable/blue_button"
				        android:text="@string/get_checkcode"
				        android:lines="1"
				        android:textSize="12sp"
				        android:textColor="#ffffffff"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/register_button_select"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="19sp"
                android:text="提交" />
        </LinearLayout>
    </FrameLayout>
    <!-- <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/foot_menu"/>
    </LinearLayout>-->

</LinearLayout>
